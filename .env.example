# Database configuration
DB_NAME=drupal
DB_USER=drupal
DB_PASSWORD=drupal
DB_ROOT_PASSWORD=rootpassword
DB_PORT=3306

# Ports
PORT_HTTP=8080

# Optional: drupal-specific prefixed variables (docker-compose maps to these)
DRUPAL_DB_HOST=db
DRUPAL_DB_NAME=${DB_NAME}
DRUPAL_DB_USER=${DB_USER}
DRUPAL_DB_PASSWORD=${DB_PASSWORD}
DRUPAL_DB_PORT=${DB_PORT}

# Site installation defaults (used by drupal-entrypoint.sh)
SITE_NAME=Drupal
PROFILE=standard
ACCOUNT_NAME=admin
ACCOUNT_PASS=admin
ACCOUNT_MAIL=admin@example.com
SITE_MAIL=${ACCOUNT_MAIL}
