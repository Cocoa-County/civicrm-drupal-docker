# Copy to .env and adjust for local dev
COMPOSE_PROJECT_NAME=assessor-website-2026
APP_ENV=dev

# Images (override as needed)
PHP_IMAGE=drupal:11.1.8-php8.3-fpm
NGINX_IMAGE=nginx:1.27-alpine
DB_IMAGE=mariadb:10.11

# Web ports
WEB_PORT=8080
ADMINER_PORT=8081
MAILHOG_SMTP_PORT=1025
MAILHOG_HTTP_PORT=8025

# DB credentials
DB_NAME=drupal
DB_USER=drupal
DB_PASSWORD=drupal
DB_ROOT_PASSWORD=rootpassword
# Copy this to .env and adjust as needed
MYSQL_DATABASE=drupal
MYSQL_USER=drupal
MYSQL_PASSWORD=drupal
MYSQL_ROOT_PASSWORD=root

# Drupal/CiviCRM
DRUPAL_BASE_URL=http://localhost:8080
DRUPAL_TRUSTED_HOSTS=localhost
DRUPAL_HASH_SALT=change-me
CIVICRM_SITE_KEY=change-me
CIVICRM_USER=admin
CIVICRM_PASS=admin
